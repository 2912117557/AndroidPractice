<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/recycleview_filmdetail_ImageView"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="演员图片"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/test_image" />

    <TextView
        android:id="@+id/recycleview_filmdetail_TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="名字："
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/recycleview_filmdetail_ImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recycleview_filmdetail_TextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/recycleview_filmdetail_TextView1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recycleview_filmdetail_TextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="身份："
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/recycleview_filmdetail_ImageView"
        app:layout_constraintTop_toBottomOf="@+id/recycleview_filmdetail_TextView1" />

    <TextView
        android:id="@+id/recycleview_filmdetail_TextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/recycleview_filmdetail_TextView3"
        app:layout_constraintTop_toBottomOf="@+id/recycleview_filmdetail_TextView2" />

</androidx.constraintlayout.widget.ConstraintLayout>