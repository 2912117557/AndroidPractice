<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.MyWindowTranslucentStatus">
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="ToolbarTheme.MyToolbarStyle">
        <item name="toolbarStyle">@style/ToolbarStyle</item><!--必须要使用toolbarStyle来设置样式-->
    </style>

    <style name="ToolbarPopupTheme" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStartWithNavigation">0dp</item><!--设置标题距返回按钮间距-->
    </style>

    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="actMain_drawerlayout_menu_textStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fragUserInfo_textTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>